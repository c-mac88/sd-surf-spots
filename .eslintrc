{
  "extends": ["loopback", "airbnb"],
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true,
    "experimentalObjectRestSpread": true
  },
  "rules": {
    "max-len": ["error", 90, 4, {
      "ignoreComments": true,
      "ignoreUrls": true,
      "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
    }],
    "comma-dangle": [0],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.spec.js"]}],
    "no-plusplus": 0,
    "no-param-reassign": 0,
    "no-extra-boolean-cast": 0
  }
}
